<% content_for(:title) { "Freshbooks Billing" } %>
<div class="gridster">
  <ul>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
        <div data-id="week_so_far_hours" data-view="Meter" data-title="Hours Billed" data-moreinfo="This week" data-min="0" data-max="20"></div>
