        <div data-id="year_paid" data-view="Number" data-title="Revenue" data-moreinfo="This year" data-prefix="$"></div>
    </li>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
        <div data-id="year_unpaid" data-view="Number" data-title="Outstanding" data-moreinfo="This year" data-prefix="$"></div>
